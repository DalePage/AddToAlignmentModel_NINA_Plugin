<ResourceDictionary
    x:Class="ADPUK.NINA.AddToAlignmentModel.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:alignmodel = "clr-namespace:ADPUK.NINA.AddToAlignmentModel.AddToAlignmentModelSequenceItems"
    xmlns:view="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer">

    <!--  This data template will be displayed in N.I.N.A. on the options->plugin tab with the datacontext of the TestPlugin instance  -->
    <!--  In order for this datatemplate to be picked correctly, the key has to follow the naming convention of <IPlugin.Name>_Options -->
    <!--  Furthermore the Resource Dictionary has to be exported via code behind export attributes  -->
    <DataTemplate x:Key="Add To Alignment Model_Options">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Mumber of Azimuth Points:" Margin="10,0,10,0"/>
                <TextBox MinWidth="30" Text="{Binding NumberOfAzimuthPoints}" HorizontalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Number of Altitude Points:" Margin="10,0,10,0" />
                <TextBox MinWidth="30" Text="{Binding NumberOfAltitudePoints}" HorizontalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Minimum Altitude:" Margin="10,0,10,0"/>
                <TextBox MinWidth="30" Text="{Binding MinElevation}" HorizontalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Maximum Altitude:" Margin="10,0,10,0" />
                <TextBox MinWidth="30" Text="{Binding MaxElevation}" HorizontalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Maximum Solve Attempts:" Margin="10,0,10,0" />
                <TextBox MinWidth="30" Text="{Binding SolveAttempts}" HorizontalAlignment="Center" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>