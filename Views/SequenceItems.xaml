<ResourceDictionary 
    x:Class="ADPUK.NINA.AddToAlignmentModel.AddToAlignmentModelSequenceItems.DataTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local ="clr-namespace:ADPUK.NINA.AddToAlignmentModel.AddToAlignmentModelSequenceItems"
    xmlns:view="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer"
    >


    <DataTemplate DataType="{x:Type local:CreateAlignmentModel}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel 
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    DataContext="{Binding}" 
                    Orientation="Horizontal" 
                    Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:SequenceBlockView}}, Path=DataContext.Inherited, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                        <TextBlock VerticalAlignment="Center" Text="Number of Azimuth Points: " Margin="10,0,0,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="NumberOfAzimuthPoints" UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="Number of Altitude Points: " Margin="20,0,0,0"/>
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="NumberOfAltitudePoints"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="Minimum Altidude: " Margin="20,0,0,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="MinElevation" UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="Maximum Altitude: " Margin="20,0,0,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="MaxElevation"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="Maximum Solve Attempts: " Margin="20,0,0,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="SolveAttempts"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">
                        <TextBlock TextAlignment="Right" Text="Completed: "/>
                        <TextBlock TextAlignment="Left" Text="{Binding StepCount}" />
                        <TextBlock TextAlignment="Left" Text="/" />
                        <TextBlock TextAlignment="Left" Text="{Binding TotalSteps}" />
                    </StackPanel>
                </Grid>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:SolveAddToAlignmentModelAndCentre}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*" ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel 
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        DataContext="{Binding}" 
                        Orientation="Horizontal" 
                        Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:SequenceBlockView}}, Path=DataContext.Inherited, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                        <TextBlock VerticalAlignment="Center" Text="Maximum number of attempts to centre: " />
                        <TextBox
                            MinWidth="20"
                            Margin="5,0,0,0"
                            TextAlignment="Right"
                            IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="MaximumAttemptsToCentre" UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Right">
                        <TextBlock TextAlignment="Right" Text="Completed: "/>
                        <TextBlock TextAlignment="Left" Text="{Binding AttemptCount}" />
                        <TextBlock TextAlignment="Left" Text="/" />
                        <TextBlock TextAlignment="Left" Text="{Binding MaximumAttemptsToCentre}" />
                    </StackPanel>
                </Grid>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>

    </DataTemplate>

</ResourceDictionary>