<ResourceDictionary 
    x:Class="ADPUK.NINA.AddToAlignmentModel.AddToAlignmentModelSequenceItems.DataTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local ="clr-namespace:ADPUK.NINA.AddToAlignmentModel.AddToAlignmentModelSequenceItems"
    xmlns:locales="clr-namespace:ADPUK.NINA.AddToAlignmentModel.Locales"
    xmlns:view="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer"
    >


    <DataTemplate DataType="{x:Type local:CreateSequenceAlignmentModel}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel 
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    DataContext="{Binding}" 
                    Orientation="Horizontal" 
                    Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:SequenceBlockView}}, Path=DataContext.Inherited, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.NumberOfAzimuthPoints}" Margin="10,0,5,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="NumberOfAzimuthPoints" UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.NumberOfAltitudePoints}" Margin="20,0,5,0"/>
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="NumberOfAltitudePoints"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.MinimumElevation}" Margin="20,0,5,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="MinElevation" UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.MaximumElevation}" Margin="20,0,5,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="MaxElevation"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel 
                    Grid.Column="0"
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    DataContext="{Binding}" 
                    Orientation="Horizontal" 
                    Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:SequenceBlockView}}, Path=DataContext.Inherited, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.SolveAttempts}" Margin="20,0,5,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        VerticalAlignment="Center"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="SolveAttempts"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.PlateSolveDelay}" Margin="20,0,5,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        VerticalAlignment="Center"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="PlateSolveCloseDelay"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.DisplayPlateSolveStatus}" Margin="20,0,5,0" />
                        <CheckBox
                        Margin="5,0,0,0">
                            <Binding Path="DisplayPlateSolveDetails"  UpdateSourceTrigger="PropertyChanged" />
                        </CheckBox>


                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">
                        <TextBlock TextAlignment="Right" Text="{x:Static locales:ViewStrings.Completed}" Margin="5,0,5,0" />
                        <TextBlock TextAlignment="Left" Text="{Binding StepCount}" />
                        <TextBlock TextAlignment="Left" Text="/" />
                        <TextBlock TextAlignment="Left" Text="{Binding TotalSteps}" />
                    </StackPanel>
                </Grid>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:SolveAddToAlignmentModel}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*" ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel 
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    DataContext="{Binding}" 
                    Orientation="Horizontal" 
                    Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:SequenceBlockView}}, Path=DataContext.Inherited, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.SolveAttempts}" Margin="20,0,5,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        VerticalAlignment="Center"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="PlateSolveAttempts"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.PlateSolveDelay}" Margin="20,0,5,0" />
                        <TextBox
                        MinWidth="20"
                        Margin="5,0,0,0"
                        TextAlignment="Right"
                        VerticalAlignment="Center"
                        IsReadOnly="{Binding IsReadOnly}">
                            <TextBox.Text>
                                <Binding Path="PlateSolveCloseDelay"  UpdateSourceTrigger="LostFocus" />
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.DisplayPlateSolveStatus}" Margin="20,0,5,0" />
                        <CheckBox Margin="5,0,0,0" IsChecked="{Binding DisplayPlateSolveDetails}" />
                    </StackPanel>
                </Grid>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>

    </DataTemplate>

    <DataTemplate DataType="{x:Type local:SolveAddToAlignmentModelAndCentre}">
        <view:SequenceBlockView>
            <view:SequenceBlockView.SequenceItemContent>
                    <WrapPanel>
                    <WrapPanel 
                        
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        DataContext="{Binding}" 
                        Orientation="Horizontal" 
                        Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type view:SequenceBlockView}}, Path=DataContext.Inherited, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.SolveAttempts}" Margin="20,0,5,0" />
                        <TextBox
                            MinWidth="20"
                            Margin="5,0,0,0"
                            TextAlignment="Right"
                            VerticalAlignment="Center"
                            IsReadOnly="{Binding IsReadOnly}"
                            Text="{Binding PlateSolveAttempts}">
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.PlateSolveDelay}" Margin="20,0,5,0" />
                        <TextBox
                            MinWidth="20"
                            Margin="5,0,0,0"
                            TextAlignment="Right"
                            VerticalAlignment="Center"
                            IsReadOnly="{Binding IsReadOnly}"
                            Text="{Binding PlateCloseSolveDelay}">
                        </TextBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.DisplayPlateSolveStatus}" Margin="20,0,5,0" />
                        <CheckBox
                        Margin="5,0,0,0"
                            IsChecked="{Binding DisplayPlateSolveDetails}">
                        </CheckBox>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static locales:ViewStrings.MaxCentreAttempts}" Margin="0,0,5,0"/>
                        <TextBox
                            MinWidth="20"
                            Margin="5,0,0,0"
                            TextAlignment="Right"
                            IsReadOnly="{Binding IsReadOnly}"
                            VerticalAlignment="Center"
                            Text="{Binding MaximumAttemptsToCentre}">
                        </TextBox>

                        <TextBlock TextAlignment="Right" Text="{x:Static locales:ViewStrings.CentreAttempts}" Margin="0,0,5,0"/>
                        <TextBlock TextAlignment="Left" Text="{Binding AttemptCount}" />
                        <TextBlock TextAlignment="Left" Text="/" />
                        <TextBlock TextAlignment="Left" Text="{Binding MaximumAttemptsToCentre}" />
                    </WrapPanel>
                </WrapPanel>
            </view:SequenceBlockView.SequenceItemContent>
        </view:SequenceBlockView>

    </DataTemplate>


</ResourceDictionary>